<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="350" Width="525">
  <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="20,0">
    <Label x:Name="countLabel" Content="Label" HorizontalAlignment="Center" FontSize="36" FontFamily="Segoe UI Black" />
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
      <StackPanel.Resources>
        <Style TargetType="Button">
          <Setter Property="Margin" Value="10" />
        </Style>
      </StackPanel.Resources>
      <Button x:Name="incrButton" Content="++" />
      <Button x:Name="randButton" Content="Button" />
      <Button x:Name="decrButton" Content="--" />
    </StackPanel>
    <TextBlock x:Name="descTextBlock" TextWrapping="Wrap" Text="TextBlock" TextAlignment="Center"/>
  </StackPanel>
</Window>